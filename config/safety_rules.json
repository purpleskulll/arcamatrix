{
  "version": "1.0",
  "description": "Gatekeeper safety rules for CLAWDBOT instances",
  "blocked_paths": [
    "/etc",
    "/var/log",
    "/usr/bin",
    "/usr/sbin",
    "/bin",
    "/sbin",
    "/root",
    "~/.ssh",
    "~/.gnupg",
    "~/.aws",
    "~/.azure",
    "~/.config/gcloud",
    "~/.kube",
    "/home/sprite/.claude",
    "/home/sprite/.claude.json",
    "/home/sprite/.openclaw/skills_config.json",
    "/home/sprite/.env",
    "/proc",
    "/sys"
  ],
  "blocked_commands": [
    "rm -rf /",
    "rm -rf /*",
    "rm -rf ~",
    "dd if=/dev",
    "mkfs",
    "fdisk",
    "parted",
    "chmod 777 /",
    "chown root",
    "sudo",
    "su -",
    "passwd",
    "useradd",
    "userdel",
    "curl | sh",
    "curl | bash",
    "wget | sh", 
    "wget | bash",
    "nc -e",
    "nc -c",
    "ncat -e",
    "bash -i >& /dev",
    "python -c.*socket",
    "perl -e.*socket",
    "ruby -rsocket",
    "shutdown",
    "reboot",
    "poweroff",
    "init 0",
    "init 6",
    "systemctl stop",
    "systemctl disable",
    "kill -9 1",
    "pkill -9",
    "killall",
    "iptables -F",
    "ufw disable"
  ],
  "blocked_patterns": [
    ".*\\.\\.\\/.*\\.\\.\\/.*\\.\\.\\/",
    ";\\s*(rm|dd|mkfs|shutdown)",
    "\\|\\s*(sh|bash|zsh|fish)",
    "`[^`]+`",
    "\\$\\([^)]+\\)",
    "eval\\s*\\(",
    "exec\\s*\\(",
    ">\\/dev\\/sd",
    ">\\/dev\\/nvme",
    "base64.*-d.*\\|.*sh"
  ],
  "allowed_paths": [
    "/home/sprite/workspace",
    "/home/sprite/customer",
    "/home/sprite/data",
    "/tmp/workspace"
  ],
  "allowed_commands": [
    "ls", "cat", "head", "tail", "grep", "find", "echo",
    "pwd", "whoami", "date", "cal",
    "python", "python3", "node", "npm", "npx",
    "git status", "git log", "git diff", "git branch",
    "curl -s", "wget -q",
    "jq", "yq"
  ],
  "max_command_length": 10000,
  "max_output_length": 100000,
  "command_timeout_seconds": 30,
  "log_all_commands": true,
  "log_blocked_attempts": true,
  "alert_on_repeated_blocks": 5
}
